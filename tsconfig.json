{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "config/*": ["./config/*"],
      "contexts/*": ["./contexts/*"],
      "layouts/*": ["./layouts/*"],
      "routes/*": ["./routes/*"],
      "store/*": ["./store/*"],
      "theme/*": ["./theme/*"],
      "utils/*": ["./utils/*"],
      "views/*": ["./views/*"],
      "assets/*": ["./assets/*"],
      "variables/*": ["./variables/*"],
      "hooks/*": ["./hooks/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
